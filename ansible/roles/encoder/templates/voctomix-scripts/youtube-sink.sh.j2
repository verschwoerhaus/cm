#!/bin/sh
ffmpeg -y -nostdin \
  -i tcp://localhost:15000 \
  -threads:0 0 \
  -aspect 16:9 \
  -c:v libx264 \
  -filter_complex '
    movie=/opt/voc/share/overlay_hd.png [logo];
    [0:v] [logo] overlay=0:0 [v];

    [0:a:0] volume=12dB, pan=mono|c0=FL [native]
  ' \
  -map '[v]' -map '[native]' \
  -maxrate:v:0 4500k -crf:0 21 \
  -bufsize:v:0 8192k -pix_fmt:0 yuv420p \
  -profile:v:0 main -g:v:0 25 \
  -preset:v:0 veryfast \
  \
  -ac 1 -c:a libfdk_aac -b:a 96k -ar 44100 \
  \
  -y -f flv rtmp://a.rtmp.youtube.com/live2/{{ youtube_rtmp_key }}


